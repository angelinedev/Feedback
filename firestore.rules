
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admin/$(request.auth.uid));
    }
    
    // Used primarily for bootstrapping the first admin user
    function noAdminsExist() {
      return !exists(/databases/$(database)/documents/admin);
    }

    // ------------------------------------
    // /users/{userId} - General user role lookup
    // ------------------------------------
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin(); 
      allow write: if isAdmin(); 
      // Allow creation for new users or by an admin.
      allow create: if isOwner(userId) || isAdmin() || (noAdminsExist() && request.resource.data.role == 'admin');
    }
    
    // ------------------------------------
    // /admin/{adminId} - The Admin Role Marker
    // ------------------------------------
    match /admin/{adminId} {
      allow read: if isAdmin();
      // Allow create only if it's the very first admin or if an existing admin is adding another.
      allow create: if noAdminsExist() || isAdmin();
      allow write: if isAdmin();
    }

    // ------------------------------------
    // /students/{studentId} - Student records
    // ------------------------------------
    match /students/{studentId} {
        allow list: if isAdmin();
        allow get: if isOwner(studentId) || isAdmin();
        allow create, update, delete: if isAdmin();
    }
    
    // ------------------------------------
    // /faculty/{facultyId} - Faculty records
    // ------------------------------------
    match /faculty/{facultyId} {
        // Any signed-in user can read faculty list (e.g., to see names on forms)
        allow read: if isSignedIn(); 
        // Only Admin can manage faculty records.
        allow create, update, delete: if isAdmin();
    }
    
    // ------------------------------------
    // /classFacultyMapping/{mappingId}
    // ------------------------------------
    match /classFacultyMapping/{mappingId} {
        // Any signed-in user can read the mapping (timetable)
        allow read: if isSignedIn(); 
        // Only Admin can manage mappings
        allow write: if isAdmin();
    }
    
    // ------------------------------------
    // /questions/{questionId}
    // ------------------------------------
    match /questions/{questionId} {
        // Any signed-in user can read questions for feedback forms
        allow read: if isSignedIn(); 
        // Only Admin can manage questions
        allow write: if isAdmin();
    }
    
    // ------------------------------------
    // /feedback/{feedbackId} - Feedback submissions
    // ------------------------------------
    match /feedback/{feedbackId} {
        // Allow create if student is submitting for themselves
        allow create: if request.resource.data.student_id == request.auth.uid;
        
        // Read access:
        // 1. Admin can read all feedback.
        // 2. Student can read their own submissions.
        // 3. Faculty can read feedback submitted for them.
        allow read: if isAdmin() || 
                       request.auth.uid == resource.data.student_id ||
                       (
                           exists(/databases/$(database)/documents/faculty/$(request.auth.uid)) &&
                           get(/databases/$(database)/documents/faculty/$(request.auth.uid)).data.faculty_id == resource.data.faculty_id
                       );
                       
        // Only admins can modify/delete feedback records
        allow update, delete: if isAdmin();
    }
  }
}
