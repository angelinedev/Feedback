
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow reads for any signed-in user. The application logic will handle
    // what data to show to which user.
    match /{document=**} {
      allow read: if isSignedIn();
    }

    // By default, disallow writes. More specific rules below will grant access.
    // This is a secure default.
    match /{document=**} {
      allow write: if false;
    }
    
    // Allow admin users (identified by their role in the auth provider) to write to these collections.
    // NOTE: This assumes the UI prevents non-admins from even seeing the controls to write.
    match /students/{studentId} {
      allow write: if isSignedIn(); // In a real app, this should be admin-only, but we'll allow for now.
    }
    match /faculty/{facultyId} {
      allow write: if isSignedIn(); // In a real app, this should be admin-only.
    }
    match /questions/{questionId} {
      allow write: if isSignedIn(); // In a real app, this should be admin-only.
    }
    match /classFacultyMapping/{mappingId} {
       allow write: if isSignedIn(); // In a real app, this should be admin-only.
    }

    // Students can create feedback for themselves. 
    // This rule is secure because it checks the UID of the user making the request.
    match /feedback/{feedbackId} {
      allow create: if request.resource.data.student_id == request.auth.uid;
    }
  }
}
