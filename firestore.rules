
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/admin/$(request.auth.uid));
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // USERS collection stores roles. A user can read their own role.
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // The initial admin can be created by anyone if no admins exist.
    // Subsequent admin documents can only be created by other admins.
    match /admin/{adminId} {
      allow read: if isAdmin();
      // Allow creation only if no other admin exists, or if requester is already an admin.
      allow create: if !exists(/databases/$(database)/documents/admin/$(request.auth.uid)) || isAdmin();
      allow write: if isAdmin();
    }

    // STUDENTS collection
    match /students/{studentId} {
        allow read: if isSignedIn();
        // Students can only update their own profile, not delete it
        allow update: if isOwner(studentId);
        // Admins can do anything
        allow write: if isAdmin();
    }
    
    // FACULTY collection
    match /faculty/{facultyId} {
        allow read: if isSignedIn();
        // Faculty can only update their own profile
        allow update: if isOwner(facultyId);
         // Admins can do anything
        allow write: if isAdmin();
    }
    
    // MAPPINGS, QUESTIONS can be read by any authenticated user, but only managed by Admins
    match /classFacultyMapping/{mappingId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }
    
    match /questions/{questionId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }
    
    // FEEDBACK can be created by any signed-in user, but only admins can see all of it.
    // Students can see their own submitted feedback.
    match /feedback/{feedbackId} {
        allow read: if isAdmin() || isOwner(resource.data.student_id);
        allow create: if isOwner(request.resource.data.student_id);
        allow update, delete: if isAdmin();
    }
  }
}

    