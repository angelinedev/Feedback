/**
 * @fileoverview Firestore Security Rules for FeedLoop v2.
 *
 * Core Philosophy:
 * This ruleset enforces a role-based access control model with ownership checks. Students and faculty have access to their own data, while admins have broader access.
 *
 * Data Structure:
 * - /students/{studentId}: Stores student data, accessible only by the student themselves or an admin.
 * - /faculty/{facultyId}: Stores faculty data, accessible only by the faculty themselves or an admin.
 * - /questions/{questionId}: Stores feedback questions, accessible only by admins.
 * - /classFacultyMapping/{classFacultyMappingId}: Stores class-faculty mappings, accessible only by admins.
 * - /feedback/{feedbackId}: Stores student feedback, with denormalized studentId and facultyId for authorization.
 * - /roles_admin/{userId}: Marks a user as an admin; existence of a document grants admin privileges.
 *
 * Key Security Decisions:
 * - No user listing is allowed for students or faculty.
 * - Feedback documents are denormalized with studentId and facultyId to enable independent authorization checks without needing 'get()' calls.
 * - Admins are granted full access to all data, determined by the existence of a document in the /roles_admin/{userId} collection.
 *
 * Denormalization for Authorization:
 * - Feedback documents include studentId, facultyId, and classFacultyMappingId. This allows security rules to validate student and faculty access to feedback documents without needing to 'get()' parent document data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user's ID matches the requested user ID.
     * @param {string} userId - The user ID to compare against the request's authentication UID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is an admin by verifying the existence of a document under `/roles_admin/{userId}`.
     */
    function isAdmin() {
        return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Checks if the user is the owner of the existing resource.
     * @param {string} userId - The user ID to compare against the resource's user ID.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Rule for the /students/{studentId} collection.
     * @path /students/{studentId}
     * @allow (get) Signed-in user can read their own student data.
     *    - request.auth.uid: 'student123'
     *    - path: /students/student123
     * @allow (create) Signed-in user can create their own student data.
     *    - request.auth.uid: 'student123'
     *    - path: /students/student123
     *    - request.resource.data.id: 'student123'
     * @deny (update) Signed-in user cannot update another user's student data.
     *    - request.auth.uid: 'student456'
     *    - path: /students/student123
     * @principle Enforces document ownership for reads and writes.
     */
    match /students/{studentId} {
      allow get: if isOwner(studentId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(studentId) && request.resource.data.id == studentId;
      allow update: if isExistingOwner(studentId) && request.resource.data.id == resource.data.id || isAdmin();
      allow delete: if isExistingOwner(studentId) || isAdmin();
    }

    /**
     * @description Rule for the /faculty/{facultyId} collection.
     * @path /faculty/{facultyId}
     * @allow (get) Signed-in faculty can read their own faculty data.
     *    - request.auth.uid: 'faculty123'
     *    - path: /faculty/faculty123
     * @allow (create) Signed-in faculty can create their own faculty data.
     *    - request.auth.uid: 'faculty123'
     *    - path: /faculty/faculty123
     *    - request.resource.data.id: 'faculty123'
     * @deny (update) Signed-in faculty cannot update another faculty's data.
     *    - request.auth.uid: 'faculty456'
     *    - path: /faculty/faculty123
     * @principle Enforces document ownership for reads and writes.
     */
    match /faculty/{facultyId} {
      allow get: if isOwner(facultyId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(facultyId) && request.resource.data.id == facultyId;
      allow update: if isExistingOwner(facultyId) && request.resource.data.id == resource.data.id || isAdmin();
      allow delete: if isExistingOwner(facultyId) || isAdmin();
    }

    /**
     * @description Rule for the /questions/{questionId} collection.
     * @path /questions/{questionId}
     * @allow (get) Admins can read questions.
     *    - request.auth.uid: 'admin123' (assuming admin doc exists)
     *    - path: /questions/question1
     * @allow (create) Admins can create questions.
     *    - request.auth.uid: 'admin123' (assuming admin doc exists)
     *    - path: /questions/question2
     * @deny (update) Non-admins cannot update questions.
     *    - request.auth.uid: 'user123'
     *    - path: /questions/question1
     * @principle Restricts access to admins only.
     */
    match /questions/{questionId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Rule for the /classFacultyMapping/{classFacultyMappingId} collection.
     * @path /classFacultyMapping/{classFacultyMappingId}
     * @allow (get) Admins can read class-faculty mappings.
     *    - request.auth.uid: 'admin123' (assuming admin doc exists)
     *    - path: /classFacultyMapping/mapping1
     * @allow (create) Admins can create class-faculty mappings.
     *    - request.auth.uid: 'admin123' (assuming admin doc exists)
     *    - path: /classFacultyMapping/mapping2
     * @deny (update) Non-admins cannot update class-faculty mappings.
     *    - request.auth.uid: 'user123'
     *    - path: /classFacultyMapping/mapping1
     * @principle Restricts access to admins only.
     */
    match /classFacultyMapping/{classFacultyMappingId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Rule for the /feedback/{feedbackId} collection.
     * @path /feedback/{feedbackId}
     * @allow (get) Signed-in user can read feedback.
     *    - request.auth.uid: 'user123'
     *    - path: /feedback/feedback1
     * @allow (create) Signed-in user can create feedback.
     *    - request.auth.uid: 'user123'
     *    - path: /feedback/feedback2
     * @deny (update) Signed-in user cannot update another user's feedback.
     *    - request.auth.uid: 'user456'
     *    - path: /feedback/feedback1
     * @principle Enforces document ownership for reads and writes.
     */
    match /feedback/{feedbackId} {
      allow get: if isSignedIn() && (request.auth.uid == resource.data.studentId || isAdmin());
      allow list: if isSignedIn() && (request.auth.uid == resource.data.studentId || isAdmin());
      allow create: if isSignedIn() && request.resource.data.studentId == request.auth.uid;
      allow update: if isSignedIn() && request.resource.data.studentId == resource.data.studentId && resource != null;
      allow delete: if false;
    }
    /**
     * @description Marks a user as an admin. Existence of document grants admin privileges.
     * @path /roles_admin/{userId}
     * @allow (get) Admins can read the roles_admin documents.
     *    - request.auth.uid: 'admin123' (assuming admin doc exists)
     *    - path: /roles_admin/admin123
     * @allow (create) Admins can create roles_admin documents.
     *    - request.auth.uid: 'admin123' (assuming admin doc exists)
     *    - path: /roles_admin/admin456
     * @deny (update) Non-admins cannot update roles_admin documents.
     *    - request.auth.uid: 'user123'
     *    - path: /roles_admin/admin123
     * @principle Role-Based Access Control.
     */
        match /roles_admin/{userId} {
          allow get: if isAdmin();
          allow list: if false;
          allow create: if isAdmin();
          allow update: if false;
          allow delete: if isAdmin();
        }
  }
}