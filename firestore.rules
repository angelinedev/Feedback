
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow signed-in users to read from any collection.
    // This simplifies the client-side logic, as the app itself will
    // be responsible for filtering and showing the correct data.
    match /{document=**} {
      allow read: if isSignedIn();
    }
    
    // USERS collection stores roles
    match /users/{userId} {
      allow read: if isSignedIn();
      // Only admins can create/update roles
      allow write: if isAdmin();
    }

    // STUDENTS collection
    match /students/{studentId} {
        // Admins can do anything
        allow read, write: if isAdmin();
        // Students can only update their own profile, not delete it
        allow update: if request.auth.uid == studentId;
    }
    
    // FACULTY collection
    match /faculty/{facultyId} {
        // Admins can do anything
        allow read, write: if isAdmin();
        // Faculty can only update their own profile
        allow update: if request.auth.uid == facultyId;
    }
    
    // MAPPINGS, QUESTIONS can only be managed by Admins
    match /classFacultyMapping/{mappingId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }
    
    match /questions/{questionId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }
    
    // FEEDBACK can be created by any signed-in user, but only admins can see all of it.
    // Individual read/update access isn't required for students/faculty as per app logic.
    match /feedback/{feedbackId} {
        allow read: if isAdmin();
        allow create: if isSignedIn() && request.resource.data.student_id == request.auth.uid;
        allow update, delete: if isAdmin();
    }
  }
}
