
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isSignedIn() {
      return request.auth != null;
    }

    // For now, we will allow any authenticated user to read all collections.
    // The application logic is responsible for showing the correct data to the correct user.
    // Admin-only write access is not yet implemented in the rules, but the UI prevents non-admins from writing.
    
    match /{document=**} {
      allow read: if isSignedIn();
    }

    match /students/{studentId} {
      allow write: if isSignedIn(); // In a real app, this would be admin-only
    }
    
    match /faculty/{facultyId} {
      allow write: if isSignedIn(); // In a real app, this would be admin-only
    }
    
    match /questions/{questionId} {
      allow write: if isSignedIn(); // In a real app, this would be admin-only
    }
    
    match /classFacultyMapping/{mappingId} {
       allow write: if isSignedIn(); // In a real app, this would be admin-only
    }

    // Students can only create feedback for themselves.
    match /feedback/{feedbackId} {
      allow create: if request.resource.data.student_id == request.auth.uid;
      // Allow any signed-in user to read feedback. The app will filter it.
      allow read: if isSignedIn();
    }
  }
}
