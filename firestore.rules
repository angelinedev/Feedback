
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/admin/$(request.auth.uid));
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // USERS collection stores roles
    match /users/{userId} {
      allow read: if isSignedIn();
      // Only admins can create roles, except for the initial setup.
      allow write: if isAdmin() || (request.method == 'create' && request.resource.data.role == 'admin');
    }
    
    // ADMIN collection can only be written to during setup, and read by admins
    match /admin/{adminId} {
      allow read: if isAdmin();
      allow write: if request.method == 'create'; // Allow initial admin creation
    }

    // STUDENTS collection
    match /students/{studentId} {
        allow read: if isSignedIn();
        // Students can only update their own profile, not delete it
        allow update: if isOwner(studentId);
        // Admins can do anything
        allow write: if isAdmin();
    }
    
    // FACULTY collection
    match /faculty/{facultyId} {
        allow read: if isSignedIn();
        // Faculty can only update their own profile
        allow update: if isOwner(facultyId);
         // Admins can do anything
        allow write: if isAdmin();
    }
    
    // MAPPINGS, QUESTIONS can only be managed by Admins
    match /classFacultyMapping/{mappingId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }
    
    match /questions/{questionId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }
    
    // FEEDBACK can be created by any signed-in user, but only admins can see all of it.
    // Individual read/update access isn't required for students/faculty as per app logic.
    match /feedback/{feedbackId} {
        allow read: if isAdmin() || isOwner(request.resource.data.student_id);
        allow create: if isOwner(request.resource.data.student_id);
        allow update, delete: if isAdmin();
    }
  }
}
